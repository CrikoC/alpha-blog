<h2 align="center"><%= @user.username %></h2>
<div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
    <p><%= simple_format(@user.email) %></p>
    <div class="article-actions">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning btn-xs" %>
      <%= link_to 'Delete', user_path(@user), class: 'btn btn-danger btn-xs' , method: :delete, data: { confirm: "Are you sure?" } %>
      <%= link_to 'Users List', users_path, class: "btn btn-default btn-xs" %>
    </div>
  </div>
</div>


