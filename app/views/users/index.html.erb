<h1>Users <%= link_to 'Create New', new_user_path, class: 'btn btn-success btn-small' %></h1>
<hr>
<table class="table table-responsive">
  <thead>
    <th>ID</td>
    <th>Username</td>
    <th>email</td>
    <th></td>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
        <td>
          <%= link_to 'Show', user_path(user), class: 'btn btn-warning btn-small' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-small' %>
          <%= link_to 'Delete', user_path(user), class: 'btn btn-danger btn-small' , method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
        </>
      </tr>
    <% end %>
  </tbody>
</table>