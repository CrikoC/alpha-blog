<h1 align="center">Alpha Bloggers</h1>
<div align="center">
  <%= will_paginate %>
</div>
<div class="row">
</div>
<% @users.each do |user| %>
  <div class="col-md-3 col-sm-6 col-sx-12">
    <ul class="list-group">
      <div class="well">
        <li class="list-group-item"><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="list-group-item"><%= link_to user.username, user_path(user) %></li>
        <li class="list-group-item">
          <small>
            <%= pluralize(user.articles.count, "article") if user.articles %>
          </small>
        </li>
        <% if logged_in? and current_user.admin? %>
          <li class="list-group-item">
            <%=
              link_to "Delete user",
              user_path(user),
              class: "btn btn-danger btn-small",
              method: :delete, data: { confirn: "Are you sure?" }
            %>
          </li>
        <% end %>
      </div>
    </ul>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>
