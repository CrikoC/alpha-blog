<h1>Articles <%= link_to 'Create New', new_article_path, class: 'btn btn-success btn-small' %></h1>
<hr>
<table class="table table-responsive">
  <thead>
    <th>ID</td>
    <th>Title</td>
    <th>Description</td>
    <th></td>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
        <td>
          <%= link_to 'Show', article_path(article), class: 'btn btn-warning btn-small' %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-small' %>
          <%= link_to 'Delete', article_path(article), class: 'btn btn-danger btn-small' , method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
        </>
      </tr>
    <% end %>
  </tbody>
</table>