<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="alert alert-danger">
        <h2>
          <%= pluralize(obj.errors.count, "error") %>
          Article creation failed
        </h2>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>  
      </div>
    </div>
  </div>
<% end %>